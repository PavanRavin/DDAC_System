@model DDAC_System.Models.AssignmentSubmission

@{
    var assignment = ViewData["Assignment"] as Assignment;
    ViewData["Title"] = "Submit Assignment - " + assignment.AssignmentName;
}
<dl class="row">
    <dt class="col-sm-2">
        Assignment Name
    </dt>
    <dd class="col-sm-10">
        @assignment.AssignmentName
    </dd>
    <dt class="col-sm-2">
        Assignment Description
    </dt>
    <dd class="col-sm-10">
        @assignment.AssignmentDesc
    </dd>
    <dt class="col-sm-2">
        Assignment Handout Date
    </dt>
    <dd class="col-sm-10">
        @assignment.AssignmentHandOut
    </dd>
    <dt class="col-sm-2">
        Assignment Due Date
    </dt>
    <dd class="col-sm-10">
        @assignment.AssignmentDue
    </dd>
    <dt class="col-sm-2">
        Class Name
    </dt>
    <dd class="col-sm-2">
        @assignment.Class_Name
    </dd>
</dl>
    <h1>Upload Assignment</h1>
    <br>
    <form asp-action="Create" asp-controller="AssignmentSubmission" method="post" enctype="multipart/form-data">
        <label>Upload Assignment from here :</label>
        <input type="file" name="submission" accept=file_extention multiple />
        <br />
        <br />
        <br />
        <input value="Upload Assignment Files" type="submit" class="btn btn-danger mr-3 my-1 py-2"><i class="fas fa-link"></i>
    </form>
<br>
<br>
<div>
    <a asp-area="" asp-controller="Assignment"asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

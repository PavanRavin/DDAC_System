@model DDAC_System.Models.Assignment

@{
    ViewData["Title"] = "Edit Assignment";
}

<h1>Edit Assignment</h1>

<h4>Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssignmentID" />
            <div class="form-group">
                <label asp-for="AssignmentName" class="control-label"></label>
                <input asp-for="AssignmentName" class="form-control" />
                <span asp-validation-for="AssignmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentDesc" class="control-label"></label>
                <input asp-for="AssignmentDesc" class="form-control" />
                <span asp-validation-for="AssignmentDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentHandOut" class="control-label"></label>
                <input asp-for="AssignmentHandOut" class="form-control" />
                <span asp-validation-for="AssignmentHandOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentDue" class="control-label"></label>
                <input asp-for="AssignmentDue" class="form-control" />
                <span asp-validation-for="AssignmentDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class_Name" class="control-label"></label>
                <select asp-for="Class_Name" class="form-control" asp-items="ViewBag.ClassNameList"></select>
                <span asp-validation-for="Class_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

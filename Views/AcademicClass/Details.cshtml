@model DDAC_System.Models.AcademicClass

@{
    ViewData["Title"] = "ClassDetails";
}

<h1>Details for @Model.Class_Name</h1>

<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class_Name)
        </dd>
        <dt class = "col-sm-2">
            Lecturer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class_Lecturer)
        </dd>
        <dt class = "col-sm-2">
            Start Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassStartTime)
        </dd>
        <dt class = "col-sm-2">
            End Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassEndTime)
        </dd>
        <dt class = "col-sm-2">
            Location
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class_Location)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {<a asp-action="Edit" asp-route-id="@Model.Class_ID">Edit</a>}
    <a asp-action="Index">Back to List</a>
</div>

@model DDAC_System.Models.AcademicClass

@{
    ViewData["Title"] = "CreateClass";
}

<h1>Create New Class</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Class_Name" class="control-label">Class Name</label>
                <input asp-for="Class_Name" class="form-control" />
                <span asp-validation-for="Class_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class_Lecturer" class="control-label">Lecturer</label>
                <input asp-for="Class_Lecturer" class="form-control" />
                <span asp-validation-for="Class_Lecturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassStartTime" class="control-label">Class Start Time</label>
                <input asp-for="ClassStartTime" class="form-control" />
                <span asp-validation-for="ClassStartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassEndTime" class="control-label">Class End Time</label>
                <input asp-for="ClassEndTime" class="form-control" />
                <span asp-validation-for="ClassEndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Class_Location" class="control-label">Class Location</label>
                <input asp-for="Class_Location" class="form-control" />
                <span asp-validation-for="Class_Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<DDAC_System.Models.AcademicClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Class_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class_Lecturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassStartTime)
            </th>

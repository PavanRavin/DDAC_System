@model DDAC_System.Models.AcademicClass

@{
    ViewData["Title"] = "Delete Class";
}

<h1>Delete Class</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Class</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Class Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class_Name)
        </dd>
        <dt class = "col-sm-2">
            Lecturer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class_Lecturer)
        </dd>
        <dt class = "col-sm-2">
            Start Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassStartTime)
        </dd>
        <dt class = "col-sm-2">
            End Time
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassEndTime)
        </dd>
        <dt class = "col-sm-2">
            Location
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Class_Location)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Class_ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
